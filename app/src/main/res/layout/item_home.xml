<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/avatar"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/favor_bg" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/home_context"
        android:layout_alignStart="@+id/home_context"
        android:layout_below="@+id/home_context"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="17"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_favor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_toRightOf="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/home_context"
        android:gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="6dp"
            android:text="6"
            android:gravity="end"
            android:textSize="16dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_repost" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearlayout1"
        android:layout_toRightOf="@id/image1"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/home_context">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="26"
            android:textSize="16dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_remark" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_toRightOf="@+id/linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearlayout2"
        android:gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="6dp"
            android:text="20"
            android:gravity="end"
            android:textSize="16dp"
            android:textColor="@android:color/white" />
        <ImageSwitcher
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@drawable/ic_like_not_selected"

            />
    </LinearLayout>



    <ImageView
        android:id="@+id/image1"
        android:layout_width="220dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/user_qq" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/home_context"
        android:layout_alignStart="@+id/home_context"
        android:layout_alignTop="@+id/image1"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/avatar_qq" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/avatar"
        android:layout_alignStart="@+id/avatar"
        android:layout_below="@+id/avatar"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="菁菁" />

    <TextView
        android:id="@+id/home_context"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_name"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/image1"
        android:layout_toRightOf="@+id/image1"
        android:text="[求助][已解决]这个椅子老是装不好..." />


</RelativeLayout>